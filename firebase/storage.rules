rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Dossier: journalists/ (photos des journalistes)
    match /journalists/{fileName} {
      // Lecture: publique (les photos sont visibles par tous)
      allow read: if true;
      
      // Écriture: utilisateur connecté + limites de sécurité
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');  // Images seulement
    }
  }
}
